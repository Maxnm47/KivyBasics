TabbedPanel: #the tabbed panel containing it all
    do_default_tab: False #no default tab in order to just have the first tab as "1"
    TabbedPanelItem: #"First tabbed panel item
        text:"1"
        ScrollView: #the scroll view
            ScreenManager: #the screen manager
                id: manager  
                size_hint_y: None #should have a sizehint to none
                height: self.current_screen.height 
                on_current_screen: self.height = self.current_screen.height  #Here is the screen sizer.

                MainScreen: #the main screen sets sets the enheritance for the other screens
                    name: 'main'
                    size_hint_y: None
                    height: grid.height  

                    GridLayout:
                        id: grid
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 10
                        padding: 10
                        cols:1
                        row_default_height: 100
                        row_force_default: True
                        Button:
                            text: 'first'
                            on_press: manager.current = 'first'  
                            size_hint: 1, None
                            height: 100
                        Button:
                            text: 'Second'
                            on_press: manager.current = 'second'  
                            
                FirstScreen:
                    name: 'first'
                    height: root.height
                    size_hint_max: root.size
                SecondScreen:
                    name: "second"
                    height: root.height
                    size_hint_max: root.size
    TabbedPanelItem:
        text:"2"
    TabbedPanelItem:
        text:"3"
<FirstScreen>: #This is here you can put your code for your first screen, after mentioning it in the screenmanager
    size_hint_y: None
    height: root.height
    BoxLayout:
        Label:
            text:"first"
        Button:
            text: 'Back to main'
            on_press: root.manager.current = 'main'

<SecondScreen>
    size_hint_y: None
    height: root.height
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"second"
        Label:
            text:"second"
        Label:
            text:"second"
        Label:
            text:"second"
        Label:
            text:"second"
        Button:
            text: 'Back to main'
            on_press: root.manager.current = 'main'
